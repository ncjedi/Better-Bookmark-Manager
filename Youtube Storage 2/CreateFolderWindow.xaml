<Window x:Class="Youtube_Storage_2.CreateFolderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Youtube_Storage_2"
        mc:Ignorable="d"
        Title="Create Folder" Height="70" Width="600" ContentRendered="Window_ContentRendered">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="NameText" TextWrapping="Wrap" Text="Name" FontSize="20" MouseLeftButtonDown="TextClicked" MouseDown="TextClicked" MouseUp="TextClicked" PreviewMouseLeftButtonDown="TextClicked" PreviewKeyDown="TextPressedEnter"/>

    </Grid>
</Window>
